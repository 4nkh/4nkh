<style>
	#header {height:175px;}
	#header_inner {height:0px;}
</style>

<h2> Add games </h2>
<%= form_for @folio, :url => create_folio_path, :html => { :multipart => true } do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  
  <fieldset>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </fieldset>

  <fieldset>
  	<%= f.label :description, 'Description' %><br/>
  	<span>Between 1 to 500 caracters!!!</span><br/>
   	<%= f.text_area :description, :cols => 10, :rows => 5 %>
  </fieldset> 
   
  <fieldset>
	<span>Select a picture</span><br/>
    <%= f.file_field :picture %>
  </fieldset>
  <%= f.submit 'Add' %>
<% end %>

