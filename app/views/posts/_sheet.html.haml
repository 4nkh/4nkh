.sheet
  .top_sheet
  %h2
    = link_to raw(sanitize(post.title)), post_url(post.id), :title => 'Show detail', :alt => 'Show detail', :style => "color:#555;" unless post.title.blank?
  .clear &nbsp;
  - unless post.url.blank? || post.url == 'http://'
    - if post.model == "videos" 
      = raw("<iframe src=\"#{sanitize(post.recorded_url)}\" style='z-index:1;margin:20px;' width='400' height='300' wmode='transparent' ></iframe>")
    - else
      %h2= link_to truncate(h(post.url),:lenght => "40",:omission => "..."),  h(post.url), :popup => 'true', :rel => 'nofollow'
      .clear &nbsp;
  = raw(auto_link(simple_format(sanitize(post.body)), :href_options => { :target => "_new"}))
  .clear &nbsp;
  .clear &nbsp;
  .clear &nbsp;
  %span{:style => "float:right;font-size:16px;font-variant:small-caps;"} 4nkh Development Team
  .clear &nbsp;

  .the_month
    %span{:style => "color:#FFF;"} #{ post.created_at.strftime("%B")[0..2] }
    .the_day
      %span{:style => "font-size:16px;line-height:30px;"} #{ post.created_at.strftime("%d") }