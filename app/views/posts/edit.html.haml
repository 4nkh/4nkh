    #blog2{:name => "blog"}
      = link_to "[-] Hide create post", "javascript:blogger('blog1');",:id => "myHeader1"
    #blog1{:name => "blog", :style => "display:none;"}
      = link_to "[+] Show create post", "javascript:blogger('blog2');",:id => "myHeader2"
